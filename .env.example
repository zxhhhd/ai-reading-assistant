# 数据库配置 (SQLite)
DATABASE_URL=file:./data/app.db

# JWT密钥
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# 火山引擎配置
VOLCENGINE_API_KEY=your-volcengine-api-key
